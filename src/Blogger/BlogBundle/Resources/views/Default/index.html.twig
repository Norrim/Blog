{% extends "::base.html.twig" %}

{% block body %}
    <h1>Liste des articles</h1>

    {%  for article in articles %}
        <article>
            <header>
                <h2>{{ article.title }}</h2>
                <time>{{ article.date|date('d M Y') }}</time>
            </header>
        </article>

        <div class="content">
            <img src="{{ article.image }}" alt="{{ article.title }}" height="120" width="200">
            <p>
                {{ article.content|nl2br }}
            </p>
        </div>
        <hr>
    {% endfor %}

{% endblock %}